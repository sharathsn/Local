<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>OCE__TemplateIsNotActive</fullName>
    <active>true</active>
    <description>You cannot create event with no active template</description>
    <errorConditionFormula>AND(ISNEW(), OCE__FieldCoachingForm__r.OCE__IsActive__c = False)</errorConditionFormula>
    <errorDisplayField>OCE__FieldCoachingForm__c</errorDisplayField>
    <errorMessage>Template is not active</errorMessage>
</ValidationRule>
